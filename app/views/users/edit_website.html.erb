<h1 class="text-3xl font-bold mb-6">Edit Profile</h1>

<%= form_for @user, url: update_website_user_profile_path(@user.website), method: :patch, data: { turbo: "true" }, html: { class: 'space-y-6' } do |f| %>
  <!-- Display error messages -->
  <% if @user.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6">
      <strong class="font-bold"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</strong>
      <ul class="mt-2">
        <% @user.errors.full_messages.each do |message| %>
          <li class="text-sm"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- Display custom error message if website already exists -->
  <% if flash[:alert] %>
    <div class="alert alert-danger bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <!-- Form fields -->
  <div class="mb-4">
    <%= f.label :website, class: 'block text-lg font-medium text-gray-700' %>
    <%= f.text_field :website, class: 'mt-1 block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500' %>
  </div>
  <!-- Other fields here -->
  <div>
    <%= f.submit "Update Profile", class: 'bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded' %>
  </div>
<% end %>

<%= link_to 'Back to Profile', user_profile_path(@user.website), class: 'inline-block bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded mt-4' %>
<%= turbo_stream_from "user_form" %>
