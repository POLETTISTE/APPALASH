<div class="flex flex-col">
  <%= render "guests/show/guest", guest: @guest %> <!-- Adjusted render path -->
  <%= link_to t('button.goback'), guests_path, class: "bg-blue-500 text-white py-2 px-4 rounded" %>
  <%= link_to t('button.edit'), edit_guest_path(@guest), class: "bg-yellow-500 text-white py-2 px-4 rounded" %>
