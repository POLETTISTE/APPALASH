<div data-search-guests-target="list">
  <% if params[:query].present? %>
    <p class="guests ml-8 mb-8">
      <%= t('.list_with_query_html', count: @guests.size, query: params[:query]) %>
    </p>
  <% end %>
  <div class="guests">
    <% @guests.each do |guest| %>
      <%= render "guest_card", guest: guest %>
    <% end %>
  </div>
</div>
