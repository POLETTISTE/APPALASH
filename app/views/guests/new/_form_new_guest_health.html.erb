<div class="bg-white rounded-lg shadow-lg p-6 w-1/2">
  <h2 class="text-2xl font-bold mb-4">Edit HEALTH </h2>
  <%= form_for @guest do |form| %>
    <%= form.fields_for :health do |health_form| %>
      <%#= field(health_form, :diabetes) %>
      <%#= field(health_form, :pregnancy) %>
      <%= render 'partials/components/checkbox_toggle_button', form: health_form, field_name: :diabetes, label: "Diabetes" %>
      <%= render 'partials/components/checkbox_toggle_button', form: health_form, field_name: :pregnancy, label: "Pregnancy" %>
      <%= render 'partials/components/checkbox_toggle_button', form: health_form, field_name: :dry_eyes, label: "dry_eyes" %>
      <%= render 'partials/components/checkbox_toggle_button', form: health_form, field_name: :teary_eyes, label: "teary_eyes" %>
      <%= render 'partials/components/checkbox_toggle_button', form: health_form, field_name: :allergy, label: "allergy" %>
      <%= render 'partials/components/checkbox_toggle_button', form: health_form, field_name: :contact_lenses, label: "contact_lenses" %>
      <%= render 'partials/components/checkbox_toggle_button', form: health_form, field_name: :surgery, label: "surgery" %>
      <%= render 'partials/components/checkbox_toggle_button', form: health_form, field_name: :chemotherapy, label: "chemotherapy" %>
      <%= render 'partials/components/checkbox_toggle_button', form: health_form, field_name: :eyes_allergy, label: "eyes_allergy" %>
      <%= render 'partials/components/checkbox_toggle_button', form: health_form, field_name: :itch, label: "itch" %>
      <%= render 'partials/components/checkbox_toggle_button', form: health_form, field_name: :first_application, label: "first_application" %>
      <%= render 'partials/components/checkbox_toggle_button', form: health_form, field_name: :lie_down, label: "lie_down" %>
      <%= field(health_form, :notes) %>
    <% end %>
    <div class="flex justify-end space-x-4 mt-4">
      <button type="button" class="bg-gray-500 text-white px-4 py-2 rounded" @click="editHealthModal = false">Cancel</button>
      <button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Save</button>
    </div>
  <% end %>
</div>