<div class="bg-white rounded-lg shadow-lg p-6 w-1/2">
  <h2 class="text-2xl font-bold mb-4">Edit HEALTH </h2>
  <%= form_for @guest do |form| %>
    <%= form.fields_for :health do |health_form| %>
      <div class="grid grid-cols-2 gap-4">
        <% [
          :diabetes,
          :pregnancy,
          :dry_eyes,
          :teary_eyes,
          :allergy,
          :contact_lenses,
          :surgery,
          :chemotherapy,
          :eyes_allergy,
          :itch,
          :first_application,
          :lie_down
        ].each do |field| %>
          <%= render 'partials/components/checkbox_toggle_button',
              form: health_form,
              field_name: field,
              label: t(".#{field}") %>
        <% end %>
        <%= field(health_form, :notes) %>
      </div>
    <% end %>
    <div class="flex justify-end space-x-4 mt-4">
      <button type="button" class="bg-gray-500 text-white px-4 py-2 rounded" @click="editHealthModal = false">Cancel</button>
      <button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Save</button>
    </div>
  <% end %>
</div>
