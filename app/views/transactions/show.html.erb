<p>
  <strong><%= t('.date') %>:</strong>
  <p><%= @transaction.date %></p>
  <p><strong><%= t('.client') %>:</strong>  <%= @transaction.client.name %> <%= @transaction.client.firstname %></p>
</p>
<h2><%= t('services_h1') %>:</h2>
<ul>
  <% @transaction.services.each do |service| %>
    <li><%= "#{service['name']} - #{'%.2f' % service['price']}" %></li>
  <% end %>
</ul>
<p><%= t('.total_price') %>: <%= '%.2f' % @transaction.total_price %></p>
<%= button_to "Destroy this transaction", @transaction, method: :delete %>
