<div id="<%= dom_id(transaction) %>">
  <%= link_to transaction_path(transaction), class: "card-transaction" do %>
    <div class="card-transaction flex">
      <% if transaction.client.photo.attached? %>
        <%= cl_image_tag transaction.client.photo.key,
            alt: "#{transaction.client.firstname}'s photo",
            width: 25, height: 25, class: "card-transaction-image" %>
      <% else %>
        <%= image_tag "client/client_photo_profil.png",
            width: "25", height: "25", crop: :fill,
            style: "background-color: tomato;",
            class: "card-transaction-image" %>
      <% end %>
      <% if current_user.admin? %>
        <p><%= transaction.user.email %></p>
      <% end %>
      <p>
        <strong><%= t('.date') %>:</strong>
        <%= transaction.date %>
      </p>
      <p>
        <strong><%= t('.client_firstname') %>:</strong>
        <%= transaction.client.firstname %>
      </p>
      <p>
        <strong><%= t('.client_name') %>:</strong>
        <%= transaction.client.name %>
      </p>
    </div>
  <% end %>
</div>
