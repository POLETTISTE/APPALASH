<h2 class="text-2xl font-semibold mb-6"><%= t('.title') %></h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'space-y-6' }) do |f| %>
  <!-- Error Notification -->
  <%= f.error_notification class: 'text-red-600' %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.full_error :reset_password_token, class: 'text-red-600' %>
  <!-- Password Inputs -->
  <div class="form-inputs space-y-4">
    <div>
      <%= f.label :password, t('.input_label'), class: 'block text-lg font-medium text-gray-700' %>
      <%= f.password_field :password,
                          required: true,
                          autofocus: true,
                          class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500',
                          autocomplete: t('.autocomplete') %>
      <% if @minimum_password_length %>
        <p class="text-sm text-gray-500 mt-1"><%= "#{@minimum_password_length} #{t('.min_chars')}" %></p>
      <% end %>
    </div>
    <div>
      <%= f.label :password_confirmation, t('.input_label_confirm'), class: 'block text-lg font-medium text-gray-700' %>
      <%= f.password_field :password_confirmation,
                          required: true,
                          class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500',
                          autocomplete: t('.autocomplete') %>
    </div>
  </div>
  <!-- Submit Button -->
  <div class="form-actions flex justify-center">
    <%= f.submit t('.change'), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
