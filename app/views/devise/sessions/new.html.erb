<div class="container">
  <%= image_tag(asset_url('logo.png'), width: 150, height: 150, class: "rounded-circle") %>
  <div class="row">
    <div class="col">
      <h2><%= t('.title') %></h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo:false}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                label: t('.label_email'),
                required: false,
                autofocus: true,
                input_html: { autocomplete: t('.autocomplete_email')} %>
          <%= f.input :password,
                label: t('.label_password'),
                required: false,
                input_html: { autocomplete: t('.autocomplete_current_password')} %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, t('.submit') %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
