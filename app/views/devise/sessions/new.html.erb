<div class="min-h-screen flex items-center justify-center p-8" style="background-image: url('<%= asset_path('login.jpg') %>');">
  <div class="flex max-w-[80vw] h-[90vh] bg-white shadow-lg rounded-[30px] overflow-hidden border-1 border-white p-2">
    <!-- Left Side (Image and Quote) -->
    <div class="w-1/2 bg-cover rounded-[20px]" style="background-image: url('<%= asset_path('login.jpg') %>');">
      <div class="flex flex-col justify-center p-8 text-white">
        <h2 class="text-lg font-semibold mb-4">A WISE QUOTE</h2>
        <h1 class="text-4xl font-bold mb-4">Get Everything You Want</h1>
        <p class="text-lg">You can get everything you want if you work hard, trust the process, and stick to the plan.</p>
      </div>
    </div>
    <!-- Right Side (Login Form) -->
    <div class="w-1/2 p-8 flex flex-col flex-grow">
      <div class="flex  mt-8 justify-center align-center">
        <%= image_tag "/assets/appalash-logo-title.png", class: "", width: "200", height: "200", role: "img", aria: { label: "logo" } %>
      </div>
      <div class="flex-grow flex flex-col justify-center align-center">
        <h2 class="text-3xl font-semibold mb-6">Welcome Back</h2>
        <p class="mb-6">Enter your email and password to access your account</p>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
          <%= f.input :email,
                        label: t('.label_email'),
                        required: false,
                        autofocus: true,
                        class:"block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm/6",
                        input_html: { autocomplete: t('.autocomplete_email') } %>
          <%= f.input :password,
                        label: t('.label_password'),
                        required: false,
                        class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",
                        input_html: { autocomplete: t('.autocomplete_current_password') } %>
          <div class="flex items-center justify-between mb-4">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= f.button :submit, t('.submit'), class:"w-full bg-black text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
          </div>
        <% end %>
        <p class="text-center text-gray-500 text-sm">
          Don't have an account ?<%= link_to t('devise.shared.links.btn_signed_up'), new_registration_path(resource_name), class:"text-customPink underline underline-offset-4" %><br />
          <%= link_to t('devise.shared.links.forgot_your_password'), new_password_path(resource_name), class:"text-customPink underline underline-offset-4" %><br />
          <%= link_to t('devise.shared.links.confirmation_instructions'), new_confirmation_path(resource_name), class:"text-customPink underline underline-offset-4" %><br />
        </p>
      </div>
    </div>
  </div>
</div>