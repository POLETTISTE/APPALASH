<div class="bg-gray-100 flex items-center justify-center min-h-screen">
  <div class="flex w-full max-w-4xl bg-white shadow-lg rounded-lg overflow-hidden">
    <!-- Left Side (Image and Quote) -->
    <div class="w-1/2 bg-cover" style="background-image: url('');">
      <div class="flex flex-col h-full justify-center p-8 bg-black bg-opacity-50 text-white">
        <h2 class="text-lg font-semibold mb-4">A WISE QUOTE</h2>
        <h1 class="text-4xl font-bold mb-4">Get Everything You Want</h1>
        <p class="text-lg">You can get everything you want if you work hard, trust the process, and stick to the plan.</p>
      </div>
    </div>
    <!-- Right Side (Login Form) -->
    <div class="w-1/2 p-8">
      <h2 class="text-3xl font-semibold mb-6">Welcome Back</h2>
      <p class="mb-6">Enter your email and password to access your account</p>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
        <%= f.input :email,
                        label: t('.label_email'),
                        required: false,
                        autofocus: true,
                        class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",
                        input_html: { autocomplete: t('.autocomplete_email') } %>
        <%= f.input :password,
                        label: t('.label_password'),
                        required: false,
                        class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",
                        input_html: { autocomplete: t('.autocomplete_current_password') } %>
        <div class="flex items-center justify-between mb-4">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          <%= f.button :submit, t('.submit'), class:"w-full bg-black text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
      <a href="#" class="text-sm text-blue-500 hover:text-blue-800">Forgot Password?</a>
      <p class="text-center text-gray-500 text-sm">
        Don't have an account? <a href="#" class="text-blue-500 hover:text-blue-800">Sign Up</a>
      </p>
      <div class="mb-4">
        <button class="w-full bg-black text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="button">
          Sign In
        </button>
      </div>
      <div class="flex items-center justify-center mb-4">
        <button class="w-full bg-white border border-gray-300 text-gray-700 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline flex items-center justify-center" type="button">
          <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google logo" class="w-5 h-5 mr-2">
          Sign In with Google
        </button>
      </div>
      <p class="text-center text-gray-500 text-sm">
        Don't have an account? <a href="#" class="text-blue-500 hover:text-blue-800">Sign Up</a>
      </p>
    </div>
  </div>
</div>