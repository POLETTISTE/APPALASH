<style>
  .container {
      width: 100%;
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
      background-color: #f9f9f9;
      border: 1px solid #ddd;
      border-radius: 10px;
      background-color:pink;
  }
  .logo {
      display: block;
      margin: 0 auto 20px;
      width: 150px;
      height: 150px;
      border-radius: 50%;
  }
  .row {
      margin-bottom: 20px;
  }
  h2 {
      text-align: center;
      font-size: 24px;
      color: #333;
  }
  .form-inputs {
      margin-bottom: 20px;
  }
  .form-inputs label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
  }
  .form-inputs input[type="email"],
  .form-inputs input[type="password"] {
      width: 100%;
      padding: 10px;
      margin-bottom: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
  }
  .form-actions {
      text-align: center;
  }
  .form-actions button {
      padding: 10px 20px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
  }
  .form-actions button:hover {
      background-color: #0056b3;
  }
  .links {
      text-align: center;
      margin-top: 20px;
  }
  .links a {
      color: #007bff;
      text-decoration: none;
  }
  .links a:hover {
      text-decoration: underline;
  }
</style>
<div class="container">
  <%= image_tag(asset_url('logo.png'), width: 150, height: 150, class: "logo") %>
  <div class="row">
    <div class="col">
      <h2><%= t('.title') %></h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                        label: t('.label_email'),
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: t('.autocomplete_email') } %>
          <%= f.input :password,
                        label: t('.label_password'),
                        required: false,
                        input_html: { autocomplete: t('.autocomplete_current_password') } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, t('.submit') %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
