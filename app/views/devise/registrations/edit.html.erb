<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, enctype: "multipart/form-data", data: { controller: "photo-preview" } }) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :email, label: t('.label_email'), required: true, autofocus: true, input_html: { autocomplete: t('.autocomplete_email') } %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p><%= t('.waiting_confirmation') %><%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.input :password, label: t('.label_password'), hint: t('.blank'), required: false, input_html: { autocomplete: t('.autocomplete_new_password') } %>
    <%= f.input :password_confirmation, label: t('.label_password_confirmation'), required: false, input_html: { autocomplete: t('.autocomplete_new_password') } %>
    <%= f.input :current_password, label: t('.label_current_password'), hint: t('.current_password'), required: true, input_html: { autocomplete: t('.autocomplete_current_password') } %>
    <!-- New Fields -->
    <%= f.input :name, label: t('.label_name'), required: false, input_html: { autocomplete: t('.autocomplete_name') } %>
    <%= f.input :firstname, label: t('.label_firstname'), required: false, input_html: { autocomplete: t('.autocomplete_firstname') } %>
    <%= f.input :website, label: t('.label_website'), required: true, input_html: { autocomplete: t('.autocomplete_website') } %>
  </div>
  <!-- Avatar Preview -->
  <div class="form-inputs">
    <!-- Original Avatar Image -->
    <% if resource.avatar.attached? %>
      <%= image_tag resource.avatar, width: 100, height: 100, class: "rounded-full", data: { photo_preview_target: "originalAvatar" } %>
    <% else %>
      <!-- Placeholder if no avatar is uploaded -->
      <%= image_tag "avatar-default.png", width: 100, height: 100, class: "rounded-full", data: { photo_preview_target: "originalAvatar" } %>
    <% end %>
    <!-- Preview Image (Initially hidden) -->
    <%= image_tag "", width: 100, height: 100, class: "hidden rounded-full", data: { photo_preview_target: "preview" } %>
  </div>
  <!-- Avatar File Input -->
  <%= image_tag "", width: 300, class: "hidden", data: { photo_preview_target: "preview" } %>
  <!-- In your form view file -->
  <%= f.input :avatar, as: :file, label: false, input_html: { 
  accept: 'image/jpeg, image/png', 
  class: 'hidden file-input', 
  id: "#{f.object_name}_avatar",
  data: { photo_preview_target: "input", action: "change->photo-preview#displayPreview" } 
} %>
  <label for="<%= f.object_name %>_avatar" class=" bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded inline-flex items-center">
    <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" style="width: 16px; height: 16px;">
      <path d="M13 8V2H7v6H2l8 8 8-8h-5zM0 18h20v2H0v-2z"/>
    </svg>
    <span><%= t('.label_upload') %></span>
  </label>
  <div class="form-actions ">
    <%= f.button :submit, t('.submit'), class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded inline-flex items-center" %>
  </div>
<% end %>
<h3><%= t('.cancel') %></h3>
<div>
  <%= t('.unhappy') %>
  <%= button_to t('.cancel_button'), registration_path(resource_name), data: { confirm: t('.unhappy_confirm'), turbo_confirm: t('.unhappy_confirm') }, method: :delete %>
</div>
<%= link_to t('.back'), :back %>
