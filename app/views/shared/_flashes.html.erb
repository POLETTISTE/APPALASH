<% if notice %>
  <div class="alert alert-info alert-dismissible fade show m-1 alert-notice" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    <p class="alert alert-light" role="alert">
      <%= notice %>
    </p>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning alert-dismissible fade show m-1 alert-warning" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    <p class="alert alert-light" role="alert">
      <%= alert %></p>
  </div>
<% end %>
