<% if user_signed_in? %>
  <div class="side-menu">
    <%= link_to t("sidebar_link_dashboard"), dashboard_index_path, class: "" %>
    <%= link_to t("sidebar_link_clients"), clients_path, class: "link-clients" %>
    <%= link_to t("sidebar_link_services"), services_path, class: "link-services" %>
    <%= link_to t("sidebar_link_transactions"), transactions_path, class: "link-transactions" %>
    <%# Debugging output to check current_user.website value %>
    <% if current_user.website.present? %>
      <%= link_to t("sidebar_link_user-website"), user_profile_path(current_user.website), class: "link-profile" %>
    <% else %>
      <span>No website set</span>
    <% end %>
  </div>
<% end %>
