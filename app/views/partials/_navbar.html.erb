<% if user_signed_in? %>
  <header>
    <div class="px-3 py-2 text-bg-dark border-bottom navbar-appalash">
      <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
          <%= link_to "/", class: "d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none" do %>
            <%= image_tag "/assets/logo.png", class: "navbar-img", width: "40", height: "40", style: "border-radius: 50%;", role: "img", aria: { label: "logo" } %>
          <% end %>
          
          <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
            <li><%= link_to "/dashboard", class: "nav-link text-secondary" do %><svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#dashboard"></use></svg>Dashboard<% end %></li>
            <li><%= link_to "/clients", class: "nav-link text-white" do %><svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#clients"></use></svg>Clients<% end %></li>
            <li><%= link_to "/services", class: "nav-link text-white" do %><svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#services"></use></svg>Services<% end %></li>
            <li><%= link_to "/transactions", class: "nav-link text-white" do %><svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#Transactions"></use></svg>Transactions<% end %></li>
            <% if current_user.website.present? %>
              <li><%= link_to user_profile_path(current_user.website), class: "nav-link text-white" do %><svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#"></use></svg>Website<% end %></li>
            <% end %>
          </ul>
          
          <div class="flex-shrink-0 dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end dropdown-menu text-small shadow" aria-labelledby="navbarDropdown">
              <%= link_to t("navbar_link_personnals_informations"), "#", class: "dropdown-item" %>
              <%= link_to t("navbar_link_subscription"), "#", class: "dropdown-item" %>
              <%= link_to t("navbar_link_preferences"), "#", class: "dropdown-item" %>
              <%= link_to t("navbar_link_edit_profile_information"), edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to t("navbar_link_logout"), destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="px-3 py-2 border-bottom mb-3">
      <div class="container d-flex flex-wrap justify-content-center">
        <form class="col-12 col-lg-auto mb-2 mb-lg-0 me-lg-auto" role="search">
          <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
        </form>
      </div>
    </div>
  </header>
<% else %>
  <div class="text-end">
    <button type="button" class="btn btn-light text-dark me-2">Login</button>
    <button type="button" class="btn btn-primary">Sign-up</button>
  </div>
<% end %>
