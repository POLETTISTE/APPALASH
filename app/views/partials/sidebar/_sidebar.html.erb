<header class="flex flex-col bg-white w-64 py-6 px-4 h-screen">
  <!-- LOGO -->
  <div class="mt-2 flex justify-center fixed top-6">
    <%= link_to "/#{I18n.locale}", class: "text-black hover:text-customPink font-semibold" do %>
      <%= image_tag "/assets/appalash-logo-title.png", width: "100", role: "img", aria: { label: "logo" } %>
    <% end %>
  </div>
  <!-- NAV LINKS -->
  <nav class="space-y-4 fixed top-32"> <!-- Adjusted top to 32 for more space -->
    <%= link_to t("navbar_link_clients"), clients_path, class: "block py-2 px-4 rounded  #{active_class("/clients")}" %>
    <%= link_to t("navbar_link_transactions"), transactions_path, class: "block py-2 px-4 rounded #{active_class("/transactions")}" %>
    <%= link_to t("navbar_link_services"), services_path, class: "block py-2 px-4 rounded #{active_class("/services")}" %>
    <!-- Only show the 'Website' link if the user is logged in and has a website -->
    <% if current_user && current_user.website.present? %>
      <%= link_to t("navbar_link_website"), user_profile_path(current_user.website), class: "block py-2 px-4 rounded #{active_class(user_profile_path(current_user.website))}" %>
    <% end %>
    <%= link_to t("navbar_link_dashboard"), dashboard_index_path, class: "block py-2 px-4 rounded #{active_class("/dashboard")}" %>
  </nav>
</header>
<!-- RIGHT COLUMN / MAIN CONTENT -->
