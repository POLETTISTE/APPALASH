<% if user_signed_in? %>
  <header>
    <!-- NAVBAR CONTAINER -->
    <div class="bg-white text-black border-b">
      <div class="container mx-auto px-4 py-3 flex items-center justify-between">
        <!-- LOGO -->
        <%= link_to "/", class: "flex items-center text-black no-underline", locale: I18n.locale do %>
          <%= image_tag "/assets/appalash-logo-title.png", width: "100", role: "img", aria: { label: "logo" } %>
        <% end %>
        <!-- HAMBURGER NAVBAR LINKS MOBILE + IPADS  -->
        <%= render 'partials/navbar/navbar_modal_hamburger' %>
        <!-- DESKTOP NAVBAR LINKS -->
        <nav class="hidden lg:flex items-center space-x-8">
          <%= link_to t("navbar_link_dashboard"), dashboard_index_path, class: active_class("/dashboard")  %>
          <%= link_to t("navbar_link_clients"), clients_path, class: active_class("/clients")  %>
          <%= link_to t("navbar_link_transactions"), transactions_path, class: active_class("/transactions")  %>
          <%= link_to t("navbar_link_services"), services_path, class: active_class("/services")  %>
          <% if current_user.website.present? %>
            <%= link_to t("navbar_link_website"), user_profile_path(current_user.website), class: active_class(user_profile_path(current_user.website))  %>
          <% end %>
        </nav>
        <!-- DROPDOWN LINKS AVATAR -->
        <%= render 'partials/navbar/navbar_modal_dropdown_avatar' %>
      </div>
    </div>
  </div>
</header>
<% end %>
