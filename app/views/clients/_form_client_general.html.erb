<%= simple_form_for @client, html: { data: { controller: "photo-preview" } } do |form| %>
  <%= image_tag "", width: 300, class: "hidden", data: { photo_preview_target: "preview" } %>
  <%= form.input :photo, as: :file, input_html: { accept: 'image/jpeg, image/png', class: 'd-none', data: { photo_preview_target: "input", action: "change->photo-preview#displayPreview" } }, label_html: { class: 'upload-photo' }, label: t(".label_photo") %>
  <%= form.input :name, label: t('simple_form.labels.client.name'), required: true %>
  <%= form.input :firstname, label: t('simple_form.labels.client.firstname'), required: true %>
  <%= form.input :email, label: t('simple_form.labels.client.email') %>
  <%= form.input :phone, label: t('simple_form.labels.client.phone') %>
  <%= form.input :address, label: t('simple_form.labels.client.address') %>
  <%= form.input :zip_code, label: t('simple_form.labels.client.zip_code') %>
  <%= form.input :city, label: t('simple_form.labels.client.city') %>
  <%= form.input :country, label: t('simple_form.labels.client.country') %>
  <%= form.input :birthdate, label: t('simple_form.labels.client.birthdate'), as: :string, input_html: { data: { controller: "datepicker" } } %>
  <%= form.input :how_do_you_know_us, collection: how_do_you_know_us_options, as: :select, label: t('simple_form.labels.client.how_do_you_know_us') %>
  <%= form.input :notes, as: :text, label: t('simple_form.labels.client.notes') %>
  <%# Fields for Lash %>
  <%= form.simple_fields_for :lash do |lf| %>
    <%= lf.input :desired_effect, collection: lash_desired_effect_options, as: :select, label: "Lash Desired Effect" %>
    <%= lf.input :face_diagnostic, collection: lash_face_diagnostic_options, as: :select, label: "Lash Face Diagnostic" %>
    <%= lf.input :asymmetry_diagnostic, collection: lash_asymmetry_diagnostic_options, as: :select, label: "Lash Asymmetry Diagnostic" %>
    <%= lf.input :eyelid_morphology_diagnostic, collection: lash_eyelid_morphology_diagnostic_options, as: :select, label: "Lash Eyelid Morphology Diagnostic" %>
    <%= lf.input :alignment_morphology_diagnostic, collection: lash_alignment_morphology_diagnostic_options, as: :select, label: "Lash Alignment Morphology Diagnostic" %>
    <%= lf.input :proportion_morphology_diagnostic, collection: lash_proportion_morphology_diagnostic_options, as: :select, label: "Lash Proportion Morphology Diagnostic" %>
    <%= lf.input :thickness_diagnostic, label: "Lash Thickness Diagnostic" %>
    <%= lf.input :length_diagnostic, as: :integer, label: "Lash Length Diagnostic" %>
    <%= lf.input :curvature_diagnostic, as: :boolean, label: "Lash Curvature Diagnostic" %>
    <%= lf.input :style, collection: lash_style_options, as: :select, label: "Lash Style" %>
    <%= lf.input :notes, as: :text, label: "Lash Notes" %>
    <%= lf.input :mapping, as: :text, label: "Lash Mapping" %>
    <%= lf.input :event, as: :text, label: "Lash Event" %>
    <%= lf.input :texture, as: :boolean, label: "Lash Texture" %>
    <%= lf.input :density, collection: lash_density_options, as: :select, label: "Lash Density" %>
  <% end %>
  <%# Fields for Extension %>
  <%= form.simple_fields_for :extension do |ef| %>
    <%= ef.input :lash_extensions_brand, label: "Extension Brand" %>
    <%= ef.input :lash_extensions_curvature, label: "Extension Curvature" %>
    <%= ef.input :lash_extensions_thickness, as: :integer, label: "Extension Thickness" %>
    <%= ef.input :lash_extensions_glue, label: "Extension Glue" %>
  <% end %>
  <%= form.button :submit, class: "btn btn-success" %>
<% end %>
