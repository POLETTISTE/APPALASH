<%= form_for @client, html: { data: { controller: "photo-preview" }, class: "space-y-6" } do |form| %>
  <!-- Photo Preview -->
  <%= image_tag "", width: 300, class: "hidden", data: { photo_preview_target: "preview" } %>
  <!-- Photo Input -->
  <div class="space-y-2">
    <%= form.label :photo, t("form.labels.client.photo"), class: 'text-lg font-medium text-gray-700' %>
    <%= form.file_field :photo, accept: 'image/jpeg, image/png', class: 'hidden', data: { photo_preview_target: "input", action: "change->photo-preview#displayPreview" } %>
  </div>
  <!-- Client Information -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <%= form.label :name, t('form.labels.client.name'), class: 'text-lg font-medium text-gray-700' %>
    <%= form.text_field :name, required: true, class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500' %>
    <%= form.label :firstname, t('form.labels.client.firstname'), class: 'text-lg font-medium text-gray-700' %>
    <%= form.text_field :firstname, required: true, class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500' %>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <%= form.label :email, t('form.labels.client.email'), class: 'text-lg font-medium text-gray-700' %>
    <%= form.email_field :email, class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500' %>
    <%= form.label :phone, t('form.labels.client.phone'), class: 'text-lg font-medium text-gray-700' %>
    <%= form.telephone_field :phone, class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500' %>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <%= form.label :address, t('form.labels.client.address'), class: 'text-lg font-medium text-gray-700' %>
    <%= form.text_field :address, class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500' %>
    <%= form.label :zip_code, t('form.labels.client.zip_code'), class: 'text-lg font-medium text-gray-700' %>
    <%= form.text_field :zip_code, class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500' %>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <%= form.label :city, t('form.labels.client.city'), class: 'text-lg font-medium text-gray-700' %>
    <%= form.text_field :city, class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500' %>
    <%= form.label :country, t('form.labels.client.country'), class: 'text-lg font-medium text-gray-700' %>
    <%= form.text_field :country, class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500' %>
  </div>
  <div class="space-y-2">
    <%= form.label :birthdate, t('form.labels.client.birthdate'), class: 'text-lg font-medium text-gray-700' %>
    <%= form.text_field :birthdate, data: { controller: "datepicker" }, class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500' %>
  </div>
  <div class="space-y-2">
    <%= form.label :how_do_you_know_us, t('form.labels.client.how_do_you_know_us'), class: 'text-lg font-medium text-gray-700' %>
    <%= form.select :how_do_you_know_us, how_do_you_know_us_options, {}, class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500' %>
  </div>
  <div class="space-y-2">
    <%= form.label :notes, t('form.labels.client.notes'), class: 'text-lg font-medium text-gray-700' %>
    <%= form.text_area :notes, class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500' %>
  </div>
  <!-- Lash Fields -->
  <%= form.fields_for :lash do |lf| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <%= lf.label :desired_effect, "Lash Desired Effect", class: 'text-lg font-medium text-gray-700' %>
      <%= lf.select :desired_effect, lash_desired_effect_options, {}, class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500' %>
      <%= lf.label :face_diagnostic, "Lash Face Diagnostic", class: 'text-lg font-medium text-gray-700' %>
      <%= lf.select :face_diagnostic, lash_face_diagnostic_options, {}, class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500' %>
    </div>
    <!-- Add other Lash input fields here similarly with Tailwind classes -->
  <% end %>
  <!-- Extension Fields -->
  <%= form.fields_for :extension do |ef| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <%= ef.label :brand, "Extension Brand", class: 'text-lg font-medium text-gray-700' %>
      <%= ef.text_field :brand, class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500' %>
      <%= ef.label :curvature, "Extension Curvature", class: 'text-lg font-medium text-gray-700' %>
      <%= ef.text_field :curvature, class: 'block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500' %>
    </div>
    <!-- Add other Extension input fields here similarly with Tailwind classes -->
  <% end %>
  <!-- Health Fields -->
  <%= form.fields_for :health do |hf| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="flex items-center">
        <%= hf.check_box :diabetes, class: 'mr-2 leading-tight' %>
        <%= hf.label :diabetes, "Diabetes", class: 'text-lg font-medium text-gray-700' %>
      </div>
      <div class="flex items-center">
        <%= hf.check_box :pregnancy, class: 'mr-2 leading-tight' %>
        <%= hf.label :pregnancy, "Pregnancy", class: 'text-lg font-medium text-gray-700' %>
      </div>
    </div>
    <!-- Add other Health input fields here similarly with Tailwind classes -->
  <% end %>
  <!-- Submit Button -->
  <div class="flex justify-center">
    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
