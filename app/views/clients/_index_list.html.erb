<div data-search-clients-target="list">
  <% if params[:query].present? %>
    <p class="clients pt-20 ml-8 mb-8">
      <%= t('.list_with_query_html', count: @clients.size, query: params[:query]) %>
    </p>
  <% end %>
  <div class="clients">
    <% @clients.each do |client| %>
      <%= render "client_card", client: client %>
    <% end %>
  </div>
</div>
